prototype(CodeQ.Instagram:InstagramGallery) < prototype(Neos.Fusion:Collection) {
	@context.count = 10
	collection = ${CodeQ.Site.getInstagramFeed('users/self/media/recent', '&count=' + count)}

	itemName = 'instagram'
	itemRenderer = CodeQ.Instagram:Instagram

	@cache {
		mode = 'cached'
		maximumLifetime = '3600'
	}
}

prototype(CodeQ.Instagram:Instagram) < prototype(Neos.Fusion:Template) {
	templatePath = 'resource://CodeQ.InstagramHelper/Private/Templates/Instagram.html'
	instagram = ${instagram}
}
